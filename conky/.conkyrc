-- Configuration settings: https://conky.cc/config_settings
-- /home/{user_name}/.conkyrc  ==> config path

conky.config = {
    alignment = 'top_right',
    background = true,
    border_width = 10,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'Monospace:size=11',
    gap_x = 20,
    gap_y = 45,
    minimum_height = 100,
    minimum_width = 100,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_wayland = true,
    out_to_x = true,
    own_window = true,
    own_window_class = 'Conky',
    own_window_transparent = false,
    own_window_argb_value = 250,
    own_window_argb_visual = true,
    own_window_colour = '#363235',
    own_window_type = 'override',
    own_window_hints = 'undecorated,sticky,below,skip_taskbar,skip_pager',
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
}
-- ${alignc}${font Monospace:bold:size=25}${color lightblue} ${time %H:%M} ${color} ${font} 
-- ${alignc}${font Monospace:bold:size=10}${color lightblue} ${time %a, %d %b %Y} ${color} ${font}
-- $hr

